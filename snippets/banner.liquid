{% if type == 'blog' %}
  {% assign title = blog.title %}
  {% assign image = section.settings.image %}
{% elsif type =='cart' %}
  {%- capture title -%}
    {{'cart.general.title' | t }}
  {%- endcapture -%}
  {% assign subtitle = section.settings.subtitle %}
  {% assign image = section.settings.image %}
{% elsif type == 'article' %}
  {% assign title = article.title %}
  {% assign image = article.image %}
{% elsif type == 'page' %}
  {% assign title = page.title %}
  {% assign image = section.settings.image %}
{% elsif type == 'contact' %}
  {% assign title = page.title %}
  {% assign image = section.settings.image %}
  {% assign subtitle = section.settings.subtitle %}
{% elsif type == 'collection' %}
  {% assign title = collection.title %}
  {% assign subtitle = section.settings.subtitle %}
  {% if section.settings.image %}
    {% assign image = section.settings.image %}
  {%- elsif collection.image -%}
    {% assign image = collection.image %}
  {%- else %}
    {% assign image = collection.products.first.featured_image %}
  {% endif %}
{% elsif type == '404' %}
  {% capture title %}
    {{ 'general.404.title' | t }}
  {% endcapture %}
  {% assign image = section.settings.image %}
{% endif %}

<style>
  .hide-when-banner-enabled {
    display: none;
  }
</style>

<section class="section
                {{ css_class }}
                is-width-{{ width }}">
  <div class="container
              {% if width == 'wide' %}
                equal-columns--outside-trim
              {% endif %}">
    <div class="banner__wrapper
                one-whole
                column
                dark-overlay-{{ section.settings.image_darken }}
                is-{{ section.settings.banner_height }}">
      {% if image != blank %}
        {% include 'image-element', image: image, alt: image.alt, stretch_width: true %}
      {% else %}
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
      <div class="banner__content card-content">
        <div class="banner__text text-align-center">
          <h1 class="banner__heading title">{{ title }}</h1>
          {% if subtitle != blank %}
            <p class="banner__subheading subtitle">{{ subtitle }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>
