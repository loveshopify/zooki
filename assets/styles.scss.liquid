================================================== */

.product-template--featured-slideshow {

  .product-gallery__main {
    height: 90vh;
  }

  .product-gallery__link,
  .image__container {
    height: 100%;
  }

  .product-gallery__image.is-selected {

    img {
      height: 100%;
      opacity: 1;
    }
  }

