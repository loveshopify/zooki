  width: 100%;
  z-index: 10;
  transition: opacity 0.25s ease-in-out;
  box-shadow: 0 8px 8px rgba($black, 0.1);

  li {
    border-top: 1px solid $search-item-border;
    padding: 10px;

    a,
    a:visited {
      color: $text;
    }

