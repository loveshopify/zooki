    width: calc(100% - #{$quantity-box-stacked-control-width});
  }

  .minus-control {
    position: absolute;
    height: calc(#{$atc-button-height} / 2);
    bottom: 0;
    right: 0;
    z-index: 3;
    margin-right: 0;
    width: $quantity-box-stacked-control-width;
