    & ~.mobile-menu__submenu.has-dropdown {
      max-height: 100vh;
    }

    & ~.mobile-menu__submenu.has-mega-menu {
      max-height: none;
      display: block;
      border-left: 0;
    }

    & + label a:after {
      transform: translateY(-60%) rotate(180deg);
    }
