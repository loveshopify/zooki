.mobile-menu-icons {
  @include flexbox();
  @include justify-content(center);
  position: absolute;
  top: 75vh;
  width: 100%;
  padding: 0;
}

.mobile-menu-link {
  position: relative;

  &::after {
    @extend %arrow;

    border-color: $input-arrow;
    right: 1.125em;
    z-index: 4;
    font-size: 1.1em;
  }
}

.mobile-menu__submenu {
  transition: max-height 0.5s;
  border-left: 1px solid {{ settings.border_color }};
  margin-left: 20px;
  max-height: 0;
  overflow: hidden;
  padding-left: 0;

  &.has-mega-menu {
    margin-left: 0;
    max-height: none;
    display: none;
