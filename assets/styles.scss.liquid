  .header__icon-style-text .mobile__currency-dropdown select {
    text-indent: -2px;
  }
}

.header__icon-style-icons-text {
  .mobile__currency-dropdown select {
    padding-left: 25px;
  }
}

.mobile-menu__toggle-button {
  display: none;
  cursor: pointer;
  position: absolute;
  top: 0;
  left: 0;
  width: 45px;
  z-index: 50;
  bottom: 0;

  &.mobile-toggle__position--right {
