        "settings": {}
      },
      {
        "type": "image",
        "settings": {}
      },
      {
        "type": "image",
        "settings": {}
      },
      {
        "type": "image",
        "settings": {}
      },
      {
        "type": "image",
        "settings": {}
      }
    ]
  }
}
{% endschema %}
