      "label": "Links hover",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "overlay_background",
      "label": "Background",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "overlay_background_opacity",
      "label": "Background opacity",
      "min": 0,
      "max": 80,
      "step": 10,
      "default": 0,
      "unit": "%"
